<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/noDelay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:text="@string/noDelay"
        android:textColor="#ffff8811"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/delay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:text="@string/delay3"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/delay5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:text="@string/delay5"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/delay10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:text="@string/delay10"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>